<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/profile_cover_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimaryDark"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-80dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerHorizontal="true"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorWhite"
                android:src="@drawable/add_ic"
                android:id="@+id/profile_profile_image"
                android:layout_marginBottom="35dp"/>
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_below="@id/profile_profile_image"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-black"
                android:text="Names"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_profile_image">

                <TextView
                    android:id="@+id/profile_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:fontFamily="serif-monospace"
                    android:maxLength="110"
                    android:padding="15dp"
                    android:text="bangla desh is one of the best country and its will be the bes
thisn sjs fjsf  sasdlj akdhf aksdhf dskhf skds"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_bio"
                    android:layout_margin="10dp"
                    android:id="@+id/edit">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true">
                        <Button
                            android:id="@+id/profile_add_postBTN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:layout_marginEnd="20dp"
                            android:textColor="@color/colorGray"
                            android:textStyle="bold"
                            android:drawableStart="@drawable/add_ic"
                            android:drawablePadding="5dp"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:text="Add Post"/>
                        <Button
                            android:id="@+id/profile_editBTN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="@color/colorGray"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:drawableStart="@drawable/edit_ic"
                            android:drawablePadding="5dp"
                            android:text="Edit"/>

                    </LinearLayout>


                </RelativeLayout>

                <TextView
                    android:id="@+id/profile_batch"
                    android:layout_below="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="monospace"
                    android:text="Batch Name"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/profile_department"
                    android:layout_below="@+id/profile_batch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="monospace"
                    android:text="Department Name"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />


            </RelativeLayout>



        </RelativeLayout>



    </LinearLayout>
</ScrollView>


</FrameLayout>